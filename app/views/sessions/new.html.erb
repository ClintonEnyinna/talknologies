<div class="container" style="max-width: 500px">
  <h4 class="text-center mt-5"> Log in <h4>
	<%= form_for(:sessions, url: login_path, method: :post) do |f| %>
		<%= f.label :username, class: 'h5' %>
		<%= f.text_field :username, class: 'form-control' %>
		</br>
		<%= f.submit 'Log in', class: 'btn btn-primary mb-3'  %>
	<% end %>
  <p class="h6">New user? <%= link_to "Sign up now!", new_user_path %></p>
</div>