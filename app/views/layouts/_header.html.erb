<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-2 bg-blue b-bottom py-2">
      <div class="card border-0 bg-transparent">
        <div class="row no-gutters">
          <% if current_user %>
            <div class="col-sm-4 text-center">
              <%= image_tag(current_user.thumbnail, class: 'header-thumbnail') if current_user %>
            </div>
            <div class="col-sm-8 d-flex align-items-center">
              <div class="card-body py-0 px-0">
                <h6 class="card-title mb-0 text-white">
                  <%=link_to current_user.fullname.upcase!, user_path(current_user), class: 'text-white text-decoration-none' %>
                </h6>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
    <main class="col-sm-10 p-0 py-2 bg-light-blue">
      <nav class="navbar navbar-expand navbar-light p-3">
        <a href="/" class="mb-0 text-white font-weight-bold text-decoration-none">TALKNOLOGIES</a>
        <div class="collapse navbar-collapse d-flex justify-content-end">
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle text-dark text-decoration-none" data-toggle="dropdown">
                  <i><%= image_tag('gear.png')%></i> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu dropdown-menu-right text-center py-0">
                  <li>
                    <%= link_to 'SETTINGS', edit_user_path(current_user), class: 'settings text-decoration-none border-bottom dropdown-link py-2' %>
                  </li>
                  <li>
                    <%= link_to 'LOG OUT', logout_path, method: :delete, class: 'text-decoration-none dropdown-link py-2' %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </main>
  </div>
</div>