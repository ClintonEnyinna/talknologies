<div class="container-fluid top-nav">
  <div class="row">
    <nav class="col-sm-2 bg-blue b-bottom d-flex align-items-center justify-content-center">
      <div class="card border-0 bg-transparent">
        <div class="row ">
          <% if current_user %>
            <div class="col-sm-4 text-center">
              <%= image_tag(current_user.profile, class: "header-thumbnail") %>
            </div>
            <div class="col-sm-8 d-flex align-items-center">
              <div class="card-body py-0 px-0">
                <h6 class="card-title mb-0 text-white text-center">
                  <%= link_to current_user.fullname.sub(/\S/, &:upcase), user_path(current_user), class: "text-white text-decoration-none" %>
                </h6>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
    <main class="col-sm-10 p-0 py-2 bg-light-blue">
      <nav class="navbar navbar-expand navbar-light p-3">
        <a href="/" class="mb-0 text-white font-weight-bold text-decoration-none">TALKNOLOGIES</a>
        <div class="collapse navbar-collapse d-flex justify-content-end">
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle text-white text-decoration-none" data-toggle="dropdown">
                  <%= icon("fas", "user-cog", class: "pr-1 text-white") %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu dropdown-menu-right py-0">
                  <li>
                    <%= link_to "Edit my account", edit_user_path(current_user), class: "settings text-decoration-none border-bottom dropdown-link p-2" %>
                  </li>
                  <li>
                    <%= link_to "Log out", logout_path, method: :delete, class: "text-decoration-none dropdown-link p-2" %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </main>
  </div>
</div>